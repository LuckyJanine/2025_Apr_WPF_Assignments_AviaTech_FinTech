<Window x:Class="FlowLedger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlowLedger"
        mc:Ignorable="d"
        Title="Flow Ledger" Height="750" Width="650">

    <Window.Resources>

        <local:ValueIsNotNullOrEmpty x:Key="ValueIsNotNullOrEmpty" />

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="2" />
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="20, 5">
            <GroupBox FontSize="18"
                Header="Transaction Category">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Margin="8, 0"
                               VerticalAlignment="Center"
                               Text="Add a New Category:"/>
                    <TextBox x:Name="txtCategoryName"
                             Grid.Row="0"
                             Grid.Column="1">
                        <!--<TextBox.Text>
                            <Binding Path="CurrentCustomer.ID"
                                     UpdateSourceTrigger="PropertyChanged"
                                     ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <local:ValueIsNotNullOrEmpty ValidatesOnTargetUpdated="False" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>-->
                    </TextBox>
                    <Button  Grid.Row="0" Grid.Column="2"
                             Margin="8, 0, 8, 0"
                             FontSize="16"
                             Content="Add"
                             />
                    <TextBlock Grid.Row="2" Margin="8, 0"
                               VerticalAlignment="Center"
                               Text="Select a Category:"/>
                    <ComboBox x:Name="cmbCategoryName" FontSize="14"
                              Margin="2"
                              Grid.Row="2"
                              Grid.Column="1"
                              VerticalAlignment="Center"
                              ItemsSource="{Binding CategoryNames}"
                              SelectedItem="{Binding SelectedCategoryName}">
                    </ComboBox>
                    <TextBlock  Grid.Row="1" Grid.Column="2"
                                Margin="5, 2, 0, 2"
                                FontSize="12"
                                Foreground="Red"
                                VerticalAlignment="Center"
                                Text="{Binding (Validation.Errors).CurrentItem.ErrorContent, 
                                ElementName=txtCategoryName}" />
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Calendar VerticalAlignment="Top"
                    SelectedDate="{Binding TransactionDate, StringFormat='{}{0:yyyy-MM-dd}'}" >
                    <Calendar.LayoutTransform>
                        <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                    </Calendar.LayoutTransform>
                </Calendar>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TabControl x:Name="tbcCategoryType"
                            SelectionChanged="tbcCategoryType_SelectionChanged"
                            Grid.Row="0" Margin="10, 5">
                    <TabItem Header="Income" FontSize="14">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock  Margin="10"
                                        VerticalAlignment="Center" FontSize="14" Text="Transaction Date:"/>
                            <TextBlock VerticalAlignment="Center" FontStyle="Italic"
                                       Grid.Column="1" Text="{Binding TransactionDate, StringFormat='{}{0:yyyy-MM-dd    dddd}'}" />
                        </Grid>
                    </TabItem>
                    <TabItem Header="Expense" FontSize="14">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Margin="10"
                                VerticalAlignment="Center" FontSize="14" Text="Transaction Date:"/>
                            <TextBlock VerticalAlignment="Center" FontStyle="Italic"
                                       Grid.Column="1" Text="{Binding TransactionDate, StringFormat='{}{0:yyyy-MM-dd, dddd}'}" />
                        </Grid>
                    </TabItem>
                </TabControl>
                <Button Grid.Row="1" Margin="20, 2"
                        Content="Confirm Transaction"
                        FontSize="16">
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold" FontSize="20"
                           Text="Current Balance:"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center"
                           FontSize="20"
                           Text="0"/>
                <TextBlock Grid.Column="2" VerticalAlignment="Center"
                           FontWeight="SemiBold" FontSize="20"
                           Text="SEK"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
